%h3 Home
User: #{link_to @user.name, @user}

- @lesson_plans.each do |lesson_plan|
  %p
    lesson plan: #{link_to lesson_plan.name, user_lesson_plan_path(lesson_plan, current_user) if lesson_plan.name}
=link_to "Create Lesson Plan", new_user_lesson_plan_path(current_user)

%h1 Post Section
%h3 #{link_to "Blog", posts_path}
%ul{class: "user_#{@user.id}_posts"}
  - @posts.each do |post|
    %li
      =link_to post.title, post_path(post)

= if @admin_posts.present?
  %ul{class: "admin_posts"}
    -@admin_posts.each do |admin_post|
      %li
        =link_to admin_post.title, post_path(admin_post)

=link_to "Create a new post", new_user_post_path(current_user)
