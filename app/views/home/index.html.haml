= if current_user.has_role?(:blogger)
  =link_to "Create a new post", new_user_post_path(current_user)
  %h3 #{link_to "Blog", posts_path}
  %ul{class: "user_#{@user.id}_posts"}
    - @posts.each do |post|
      %li
        =link_to post.title, post_path(post)
        =link_to 'edit post', edit_user_post_path(current_user, post)
= if @admin_posts.present?
  %ul{class: "admin_posts"}
    -@admin_posts.each do |admin_post|
      %li
